{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",                // âœ… Fixes JSX/TSX compilation
    "allowJs": true,                       // Allow plain JS files if needed
    "esModuleInterop": true,               // Better import compatibility
    "skipLibCheck": true,                  // Speed up type checking
    "moduleResolution": "node",
    "resolveJsonModule": true,             // Enable importing .json files
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
